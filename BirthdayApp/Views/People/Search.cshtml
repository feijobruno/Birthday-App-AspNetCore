
@{
    ViewData["Title"] = "Search";
}

@model People

<h3 style="margin-top: 25px;">Search</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Result" asp-controller="People" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Search Firstname or Lastname</label>
                <input class="form-control" name="query" id="query" />
                <span name="query" id="query"></span>
            </div>
            <div class="form-group">
                <a href="/people" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Search Person</button>
            </div>
        </form>
    </div>
</div>

